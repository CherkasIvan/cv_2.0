# Stage 1: Build the Angular app
FROM node:18 AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build:ssr --prod

# Stage 2: Serve the app with Nginx
FROM nginx:alpine

COPY --from=build /app/dist/cv_2.0/browser /usr/share/nginx/html
COPY --from=build /app/dist/cv_2.0/server /usr/share/nginx/html/server

COPY conf.d/default.conf.template /etc/nginx/conf.d/default.conf.template

EXPOSE 8080

CMD ["sh", "-c", "envsubst '\$BACKEND_HOST' < /etc/nginx/conf.d/default.conf.template > /etc/nginx/conf.d/default.conf && exec nginx -g 'daemon off;'"]
